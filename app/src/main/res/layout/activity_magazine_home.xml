<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <!--actionbar-->
    <tndn.app.nyam.widget.TDActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/magazine_home_function01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/banner_magazine_ganse" />


            <!--start four site-->

            <!--indecator text-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/main_title_textview"
                    android:text="@string/attraction" />

                <ImageView
                    android:id="@+id/magazine_home_four_site_more"
                    style="@style/arrow_imageview" />

            </RelativeLayout>
            <!--end indecator text-->

            <!--start first site row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:weightSum="2">

                <!--start site 01-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/magazine_home_site_01"
                        style="@style/imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/noimg_big_site" />

                    <TextView
                        android:id="@+id/magazine_home_site_content_01"
                        style="@style/magazine_home_site_content" />

                </LinearLayout>
                <!--end site 01-->

                <!--start site 02-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/magazine_home_site_02"
                        style="@style/imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/noimg_big_site" />

                    <TextView
                        android:id="@+id/magazine_home_site_content_02"
                        style="@style/magazine_home_site_content" />

                </LinearLayout>
                <!--end site 02-->

            </LinearLayout>
            <!--end first site row-->

            <!--start second site row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:weightSum="2">

                <!--start site 03-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/magazine_home_site_03"
                        style="@style/imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/noimg_big_site" />

                    <TextView
                        android:id="@+id/magazine_home_site_content_03"
                        style="@style/magazine_home_site_content" />

                </LinearLayout>
                <!--end site 03-->

                <!--start site 04-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/magazine_home_site_04"
                        style="@style/imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/noimg_big_site" />

                    <TextView
                        android:id="@+id/magazine_home_site_content_04"
                        style="@style/magazine_home_site_content" />

                </LinearLayout>
                <!--end site 04-->

            </LinearLayout>
            <!--end second site row-->
            <!--end four site-->


            <!--start all square pic-->
            <!--indecator text-->
            <RelativeLayout
                android:id="@+id/magazine_home_title_squre_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/main_title_textview"
                    android:text="@string/square_attraction" />

                <ImageView
                    android:id="@+id/magazine_home_square_more"
                    style="@style/arrow_imageview" />

            </RelativeLayout>
            <!--end indecator text-->

            <tndn.app.nyam.widget.ExpandableHeightGridView
                android:id="@+id/magazine_home_square_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:horizontalSpacing="1dp"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="1dp" />

            <!--start jeju weekly-->
            <LinearLayout
                android:id="@+id/main_title_jejuweekly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/main_title_textview"
                    android:text="@string/main_title_jejuweekly" />
                <!--first weekly-->
                <LinearLayout
                    android:id="@+id/main_jejuweekly_01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/img_weekly_02" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            style="@style/main_jejuweekly_title"
                            android:text="@string/jejuweekly_title_01" />

                        <TextView
                            style="@style/main_jejuweekly_content"
                            android:text="@string/jejuweekly_content_01" />
                    </LinearLayout>

                </LinearLayout>
                <!--end first weekly-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/tndn_line" />
                <!--second weekly-->
                <LinearLayout
                    android:id="@+id/main_jejuweekly_02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/img_weekly_01" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            style="@style/main_jejuweekly_title"
                            android:text="@string/jejuweekly_title_02" />

                        <TextView
                            style="@style/main_jejuweekly_content"
                            android:text="@string/jejuweekly_content_02" />
                    </LinearLayout>

                </LinearLayout>
                <!--end second weekly-->
            </LinearLayout>
            <!--end jeju weekly-->

        </LinearLayout>
    </ScrollView>
</LinearLayout>
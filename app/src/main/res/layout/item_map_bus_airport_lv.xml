<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_map_bus_airport_busnum"
            style="@style/bus_airport_18sp_pink"

            android:text="702" />

        <TextView
            android:id="@+id/item_map_bus_airport_busgoto"
            style="@style/bus_airport_12sp_black"
            android:text="사계경유방면" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_map_bus_airport_miniute"
            style="@style/bus_airport_14sp_pink"
            android:text="약 15분" />

        <TextView
            android:id="@+id/item_map_bus_airport_leftcount"
            style="@style/bus_airport_12sp_black"
            android:text="9 정류소 전" />
    </LinearLayout>


</RelativeLayout>
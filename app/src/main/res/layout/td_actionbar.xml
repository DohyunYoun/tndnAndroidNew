<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tnb_height"
    android:background="@color/white">

    <Button
        android:id="@+id/actionbar_back_button"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/btn_arrow_pink" />

    <Spinner
        android:id="@+id/actionbar_local_spinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:elevation="0dp"
        android:padding="10dp"
        android:visibility="gone" />
    <!--<Spinner-->
    <!--android:id="@+id/actionbar_local_spinner"-->
    <!--android:layout_width="100dp"-->
    <!--android:layout_height="49dp"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:elevation="0dp"-->
    <!--android:padding="10dp"-->
    <!--android:visibility="gone" />-->

    <ImageView
        android:id="@+id/actionbar_filter_initialization"
        style="@style/imageview"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:src="@drawable/clicked_store_list_filter_initialization"
        android:visibility="gone" />

    <TextView
        android:id="@+id/actionbar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/actionbar_qr_button"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/btn_qr_pink"
        android:visibility="gone" />

    <Button
        android:id="@+id/actionbar_refresh_button"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/btn_refresh_pink"
        android:visibility="gone" />

    <Button
        android:id="@+id/actionbar_close_button"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/ic_close_pink_actionbar"
        android:visibility="gone" />

</RelativeLayout>

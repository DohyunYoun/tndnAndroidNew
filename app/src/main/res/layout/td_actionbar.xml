<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tnb_height"
    android:background="@color/white">

    <Button
        android:id="@+id/actionbar_back_button"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/btn_arrow_pink" />

    <Spinner
        android:id="@+id/actionbar_local_spinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:elevation="0dp"
        android:padding="10dp"
        android:visibility="gone" />
    <!--<Spinner-->
    <!--android:id="@+id/actionbar_local_spinner"-->
    <!--android:layout_width="100dp"-->
    <!--android:layout_height="49dp"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:elevation="0dp"-->
    <!--android:padding="10dp"-->
    <!--android:visibility="gone" />-->

    <ImageView
        android:id="@+id/actionbar_filter_initialization"
        style="@style/imageview"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:src="@drawable/clicked_store_list_filter_initialization"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/actionbar_nearby"
        style="@style/imageview"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/actionbar_text"
        android:padding="10dp"
        android:src="@mipmap/ic_nearby"
        android:visibility="gone" />


    <TextView
        android:id="@+id/actionbar_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/black" />


    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        android:id="@+id/actionbar_circular_progressbar"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/actionbar_text"
        android:indeterminate="true"
        android:padding="15dp"
        android:visibility="gone"
        app:cpb_color="@color/gray_9b"
        app:cpb_colors="@array/colors"
        app:cpb_stroke_width="2dp" />

    <Button
        android:id="@+id/actionbar_qr_button"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/btn_qr_pink"
        android:visibility="gone" />


    <Button
        android:id="@+id/actionbar_refresh_button"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/btn_refresh_pink"
        android:visibility="gone" />

    <Button
        android:id="@+id/actionbar_close_button"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/ic_close_pink_actionbar"
        android:visibility="gone" />

</RelativeLayout>

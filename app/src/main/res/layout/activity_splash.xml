<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splash_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tndn_pink"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/img_logo" />
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/version_info"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="v.1.1.9
TNDN corp
217, JoongAng-ro Jeju-si Jeju-do, no.607(+82 1544-3980)"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/version_info"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="minSDk 15(JellyBean)
targetSDK 22(LolliPop)"/>
</RelativeLayout>
